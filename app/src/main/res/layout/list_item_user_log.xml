<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cstLot_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_ripple"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorSeparator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgVw_docIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_word_doc"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txtVw_userName"
            style="@style/importantText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@id/imgVw_docIcon"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txtVw_searchContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgVw_docIcon"
            app:layout_constraintTop_toBottomOf="@id/txtVw_userName"
            style="@style/normalText"
            />

        <TextView
            android:id="@+id/txtVw_createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/secondaryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtVw_searchContent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>